{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",             // important for Node imports
    "moduleResolution": "Node",
    "esModuleInterop": true,          // allows import { ... } from './HomePage'
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["pages/*"],
      "@tests/*": ["tests/*"],
      "@utils/*": ["utils/*"]  // âœ… add this

    }
  },
  "include": ["pages", "tests"]
}
